<h1 class="text-center ">{{title}}</h1>
<p class="text-center mb-5">Use the below form to create new post </p>

<form action="/create" method="post" class="form-row">
    <div class="form-group col-8 offset-2">
        <label>
            Title *
        </label>
        <input type="text" placeholder="Enter Your Title" class="form-control" name="title" />
    </div>
    <div class="form-group col-8 offset-2 mb-5">
        <label>
            Content *
        </label>
        <input type="text" placeholder="Enter Your Content" class="form-control h-100" name="content" />
    </div>
    <div class="form-group col-8 offset-2">
         <button class="btn buttonClass text-center">Save</button>
    </div>
</form>
