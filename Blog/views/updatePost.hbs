<h1 class="text-center ">{{title}}</h1>
<p class="text-center mb-5">Use the below form to update post </p>

<form action="/update/{{post._id}}" method="post" class="form-row">
    <div class="form-group col-8 offset-2">
        <label>
            Title *
        </label>
        <input type="text" placeholder="Enter Your Title" class="form-control" name="title" value="{{post.title}}" />
    </div>
    <div class="form-group col-8 offset-2 mb-5">
        <label>
            Content *
        </label>
        <input type="text" placeholder="Enter Your Content" class="form-control h-100" name="content" value="{{post.content}}" />
    </div>
    <div class="form-group col-8 offset-2">
         <button class="btn buttonClass text-center">Update</button>
    </div>
</form>